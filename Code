//LOWER TRIANGULAR 
def lower_triangular(n):
    for i in range(1, n + 1):
        print("* " * i)
n = 7
print("Lower Triangular:")
lower_triangular(n)

// UPPER TRIANGULAR 
def upper_triangular(n):
    for i in range(n, 0, -1):
        print("  " * (n - i) + "* " * i)
n = 7
print("\nUpper Triangular:")
upper_triangular(n)

// PYRAMID
def pyramid(n):
    for i in range(1, n + 1):
        print(" " * (n - i) + "* " * i)
n = 7 
print("\nPyramid:")
pyramid(n)


